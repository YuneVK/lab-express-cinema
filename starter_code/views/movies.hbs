<div class="movies">
  <h1>Ironhack Cinema</h1>

  <p class="subtitle">Click on the movie to check the showtimes!</p>

  <div class="cards">
    {{#each movies}}
      <div class="card">
        <img src="{{this.image}}" alt="">
        <p>{{this.title}}</p>
        <a href="movie/{{this.id}}">See more</a>
      </div>
    {{/each}}
  </div>

</div>